menu "AXI Options"# {{{

config AXI_READ_DELAY_MIN
int "Random minimum read delay"
default 0

config AXI_READ_DELAY_MAX
int "Random maximum read delay"
range AXI_READ_DELAY_MIN 2147483647
default 1

config AXI_WRITE_DELAY_MIN
int "Random minimum write delay"
default 0

config AXI_WRITE_DELAY_MAX
int "Stop perference test after run which program"
range AXI_WRITE_DELAY_MIN 2147483647
default 1

config AXI_DWID
int "AXI bus data channal width"
default 32

config AXI_AWID
int "AXI bus address channal width"
default 32

config AXI_IDWID
int "AXI bus xID signal width"
default 4
endmenu# }}}

menu "Perference Test"# {{{
config PERF_START
int "Start to run perference test from which program"
range 1 10
default 1

config PERF_END
int "Stop perference test after run which program"
range PERF_START 10
default 1

config PERF_ANALISES
depends on TEST_PERF
bool "Record every instruction execute time"
default n
endmenu# }}}

menu "Wave and Debugging"
config WAVE_ON
bool "trace wave file"
default y

config WAVE_DIR
    depends on WAVE_ON
    string "Wave file absolutely path"
    default "$(HITD_HOME)/wave"
    help 
        the absolute path or relative path of wave diretory,
        can use environment variable with makefile grammer.
        can not add the last "/".

choice
  prompt "Wave file extension"
  depends on WAVE_ON
  default EXT_FST
config EXT_VCD
  bool "vcd"
config EXT_FST
  bool "fst"
endchoice

config WAVE_EXT
  string
  default "vcd" if EXT_VCD
  default "fst" if EXT_FST
  default "none"

config WAVE_TAIL_ENABLE
depends on WAVE_ON 
bool "control the ticks when enble wave"
default y

config WAVE_START_FROM
depends on WAVE_ON && WAVE_TAIL_ENABLE
int "When wave trace start"
default 0

config MEM_DIFF
  bool "Enable memory check when read by AXI"
  default yes

config CP0_DIFF
  bool "Enable coprocessor register 0 check"
  default no

config HILO_DIFF
  bool "Enable hi lo register check"
  default no

config FREELIST_DIFF
  bool "Enable FreeList Physical register move check"
  default no

config TLB_DIFF
  bool "Enable all TLB entries check"
  default no

config COMMIT_WAIT
  bool "Automatic exit after waiting a while without instruction commit"
  default yes
config COMMIT_TIME_LIMIT
  depends on COMMIT_WAIT
  int "Wait how many clock cycles"
  default 4096

config TTRACE
  depends on TRACE
  bool "Trace MyCPU all AXI Transition"
  default y

config CTRACE
  depends on TRACE
  bool "Trace Cache Req and States"
  default n


config BTRACE
  depends on TRACE
  bool "Trace branch predict units"
  default n

config BRANCH_STATS
  bool "Statistics branch predict rate"
  default n

config UTRACE
  depends on TRACE
  bool "Trace Uart Buffer IO"
  default n

config MEM_INDEX
  bool "Trace Mem Index "
  default n

config SNAPSHOT_AUTO
  bool "Enable Automatically save snapshot"
  default n

endmenu
